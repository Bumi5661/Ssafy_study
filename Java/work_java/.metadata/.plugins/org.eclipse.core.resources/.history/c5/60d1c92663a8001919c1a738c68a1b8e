	import java.util.Arrays;
	import java.util.Scanner;
	
	public class 힘드러 {
		public static void main(String[] args) {
			Scanner sc=new Scanner(System.in);
			
			int[] arr=new int[100];
			
			int dump=sc.nextInt();
			
			for(int i=0;i<100;i++)
			{
				arr[i]=sc.nextInt();
			}
			
			
			for(int i=0;i<dump;i++)
			{
				Arrays.sort(arr);
				if(arr[0]==arr[99])
				{
					break;
				}
				else {
				arr[0]++;
				arr[99]--;
				}
				
					
			}
			System.out.println(arr[99]-arr[0]+2);
			
		}
	}
	
	
